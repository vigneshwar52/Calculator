<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightBlack"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_margin="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_margin="20dp"/>
</LinearLayout>
    <LinearLayout
        style="@style/btnRow">
        <Button
            style="@style/btnOperation"
            android:text="AC">
        </Button>
        <Button
            android:id="@+id/btnClear"
            style="@style/btnOperation"
            android:text="Clear">
        </Button>
        <Button
            style="@style/btnOperation"
            android:text=""
            android:enabled="false"
            android:background="@color/black">
        </Button>

        <Button
            style="@style/btnOperation"
            android:text="/">
        </Button>
    </LinearLayout>
    <LinearLayout
        style="@style/btnRow">
        <Button
            style="@style/btnNumber"
            android:text="7">
        </Button>
        <Button
            style="@style/btnNumber"
            android:text="8">
        </Button>
        <Button
            style="@style/btnNumber"
            android:text="9">
        </Button>
        <Button
            style="@style/btnOperation"
            android:text="X">
        </Button>
    </LinearLayout>
    <LinearLayout
        style="@style/btnRow">
        <Button
            style="@style/btnNumber"
            android:text="4">
        </Button>
        <Button
            style="@style/btnNumber"
            android:text="5">
        </Button>
        <Button
            style="@style/btnNumber"
            android:text="6">
        </Button>
        <Button
            style="@style/btnOperation"
            android:text="-">
        </Button>
    </LinearLayout>
    <LinearLayout
        style="@style/btnRow">
        <Button
            style="@style/btnNumber"
            android:text="1">
        </Button>
        <Button
            style="@style/btnNumber"
            android:text="2">
        </Button>
        <Button
            style="@style/btnNumber"
            android:text="3">
        </Button>
        <Button
            style="@style/btnOperation"
            android:text="+">
        </Button>
    </LinearLayout>
    <LinearLayout
        style="@style/btnRow">
        <Button
            style="@style/btnNumber"
            android:text=".">
        </Button>
        <Button
            style="@style/btnNumber"
            android:text="0">
        </Button>
        <Button
            style="@style/btnNumber"
            android:text="="
            android:background="@color/orange">
        </Button>
    </LinearLayout>
</LinearLayout>